<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>실습문제 axios post 로그인</title>
    <!-- axios CDN -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
      .result {
        font-size: 1rem;
        font-weight: 700;
      }
    </style>
  </head>
  <body>
    <!-- post 요청 -->
    <h2>axios post 로그인</h2>
    <form name="register">
      <label for="id">
        ID
        <input type="text" id="id" name="id" required /> </label
      ><br /><br />
      <label for="pw">
        PW
        <input type="password" id="pw" name="pw" required />
      </label>
      <br /><br />
      <button type="button" onclick="axiosPost()">axios Post 제출</button
      ><br /><br />
      <div class="result"></div>
    </form>
    <script>
      const resultBox = document.querySelector(".result");
      function axiosPost() {
        const form = document.forms["register"];
        const data = {
          id: form.id.value,
          pw: form.pw.value,
        };
        axios({
          method: "post",
          url: "/axios",
          data: data,
        }).then((res) => {
          if (res.data === true) {
            resultBox.innerText = `axios POST 요청 성공, 로그인 성공`;
            resultBox.style.color = "blue";
          } else {
            resultBox.style.color = "red";
            resultBox.innerText = `axios POST 요청 성공, 로그인 실패`;
          }
        });
      }
    </script>
  </body>
</html>
